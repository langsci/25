    	frametitlerule=false, 
    	repeatframetitle=false, 
    	linewidth=\trennlinie, 
    	linecolor=\tblslinecolour, 
    	innerbottommargin=5mm, 
    	innertopmargin=5mm
    }
    
    \newcommand{\tblsfillcolour}{black!12}
    
    \mdfdefinestyle{tblsfilledbox}{%
    	hidealllines=true, 
