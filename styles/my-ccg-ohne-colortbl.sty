% nice layout for presenting rules
\newcommand{\unaryrule}[4] {   
  \textit{#1}$:$\\
  $\begin{array}{cccc} 
    #3 & \Rightarrow_{\footnotesize #2} & #4
  \end{array}$  
}

\newcommand{\binaryrule}[5] {   
  \textit{#1}$:$\\
  $\begin{array}{cccc} 
    #3 & #4 & \Rightarrow_{\footnotesize #2} & #5
  \end{array}$  
}



